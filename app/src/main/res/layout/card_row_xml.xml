<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    card_view:cardCornerRadius="5dp">

    <android.support.v7.widget.CardView

        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <ImageView
            android:id="@+id/deviceImg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/user_photo"/>


    <TextView
            android:id="@+id/deciveName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deviceImg"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:textAlignment="center"
            android:textSize="20sp"/>
    <TextView
            android:id="@+id/decivestatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deciveName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:layout_marginStart="0dp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"/>

    <TextView
            android:id="@+id/deciveStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deviceImg"
            android:layout_below="@+id/deciveName"
            android:textAlignment="center"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/deciveScreenSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deviceImg"
            android:layout_below="@+id/deciveStorage"
            android:textAlignment="center"
            android:textSize="15sp"/>



        <TextView
            android:id="@+id/deciveModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/deviceImg"
            android:layout_below="@+id/deciveScreenSize"
            android:textAlignment="center"
            android:textSize="15sp"/>


        <com.katekani.laptopsponsorapp.RelativeTimeTextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:paddingLeft="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp" />



    </RelativeLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>
